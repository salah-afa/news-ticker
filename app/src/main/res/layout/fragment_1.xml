<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/button_fragment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="Fragment 2" />

    <Button
        android:id="@+id/button_fragment_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="Fragment 3" />

    <Button
        android:id="@+id/button_add_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_fragment_2"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="Add News" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_fragment_2"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:layout_toEndOf="@+id/button_add_news"
        android:inputType="textCapSentences"
        android:hint="News"
        android:maxLines="1" />

    <Button
        android:id="@+id/button_delete_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_add_news"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="Delete First News" />

</RelativeLayout>