    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.salahafaghani.newsticker.FirstFragment"
        android:label="fragment 1"
        tools:layout="@layout/fragment_1">
